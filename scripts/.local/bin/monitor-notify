#!/bin/bash
# Script para enviar notifica√ß√µes visuais sobre modos de monitor

send_monitor_notification() {
    local mode="$1"
    local external_monitor="${2:-none}"
    local icon=""
    local title=""
    local message=""
    local urgency="normal"
    
    case "$mode" in
        "clamshell")
            icon="computer-laptop"
            title="üñ•Ô∏è Modo Clamshell"
            message="Monitor externo: $external_monitor\nNotebook: Tela desligada"
            urgency="normal"
            ;;
            
        "dual")
            icon="video-display"
            title="üñ•Ô∏èüíª Modo Dual Monitor"
            message="Monitor principal: eDP-1\nMonitor secund√°rio: $external_monitor"
            urgency="normal"
            ;;
            
        "single")
            icon="computer"
            title="üíª Modo Single"
            message="Apenas tela do notebook\nMonitor externo: Desconectado"
            urgency="low"
            ;;
            
        "connecting")
            icon="network-wireless"
            title="üîÑ Detectando Monitor..."
            message="Configurando displays..."
            urgency="low"
            ;;
            
        "error")
            icon="dialog-error"
            title="‚ùå Erro de Monitor"
            message="$external_monitor"
            urgency="critical"
            ;;
            
        *)
            icon="preferences-desktop-display"
            title="üñ•Ô∏è Monitor"
            message="Configura√ß√£o atualizada"
            urgency="normal"
            ;;
    esac
    
    # Enviar notifica√ß√£o
    notify-send -i "$icon" \
                -t 3000 \
                -u "$urgency" \
                -h string:x-canonical-private-synchronous:monitor \
                "$title" \
                "$message"
}

# Se chamado diretamente com argumentos
if [ $# -gt 0 ]; then
    send_monitor_notification "$@"
fi
