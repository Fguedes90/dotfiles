# Configuração do Ghostty Terminal

# Fonte (mesma do Alacritty)
font-family = CaskaydiaMono Nerd Font
font-size = 9

# Tema e aparência
theme = dark
background-opacity = 0.98

# Padding (similar ao Alacritty)
window-padding-x = 14
window-padding-y = 14

# Decorações da janela
window-decoration = false

# Cursor
cursor-style = block
cursor-blink = true

# Copiar ao selecionar (como no Alacritty)
copy-on-select = clipboard

# Atalhos de teclado
keybind = ctrl+c=copy_to_clipboard
keybind = ctrl+v=paste_from_clipboard
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = f11=toggle_fullscreen
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+0=reset_font_size

# Performance
gtk-single-instance = true

# Shell padrão (detecta automaticamente)
# shell = /usr/bin/zsh

# Título da janela
window-title = Ghostty

# Cores do tema (será sobrescrito pelo tema Omarchy se existir)
# background = #1a1b26
# foreground = #c0caf5